askForInput() {
    IFS=
    read -p ":: $1 " input
    IFS=$DEFAULT_IFS
    echo "$input"
}

askForCredentials() {
    log "Let's configure a new remote connection "
    REMOTEHOST=$(askForInput "What is the remote host URL ?")
    REMOTEUSER=$(askForInput "Who is the user ?")
}

askForOneTimeCredentials() {
    REMOTEHOST=$(askForInput "What is the remote host URL ?")
    REMOTEUSER=$(askForInput "Who is the user ?")
}

askForNewRemoteGroupName() {
    log "Assign a name to this new group of connections"
    REMOTENAME=$(askForInput "Group name : ")
    REMOTEFILE="${GROUPDIR}remote(${REMOTENAME})"
    checkForExistingRemoteGroup "$REMOTEFILE"
}

askForRemoteGroupName() {
    log "To view the available connections of a group, input a group name."
    log "To create a new group, use a new name."
    REMOTENAME=$(askForInput "Group name : ")
    REMOTEFILE="${GROUPDIR}remote($REMOTENAME)"
    checkIfRemoteGroupExists "$REMOTEFILE"
}

askForConnection() {
    log "To select one, enter the index from the list of connections."
    log "If you want to use all connections, use * as input"
    CONN_NUM=$(askForInput "Connection number :")
}

askForRemoveConnection() {
    log "To remove a connection, enter the index from the list of connections."
    log "If you want to the group and all its connections, use * as input"
    CONN_REM_NUM=$(askForInput "Connection number :")
}